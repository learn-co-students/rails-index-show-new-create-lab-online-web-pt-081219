<h1>Coupon Form</h1>

<%
=begin%>
<%= form_for(@coupon) do |f|%>
    <p>
        <%= f.label :coupon_code %>
        <%= f.text_field :coupon_code %>
    </p>
    <p>
        <%= f.label :store %>
        <%= f.text_field :store %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %> 
<%
=end%>

<%= form_tag coupons_path do %>
    <label>Coupon Code:</label><br>
    <%= text_field_tag :"coupon[coupon_code]" %><br>

    <label>Coupon for Store:</label><br>
    <%= text_field_tag :"coupon[store]" %><br>

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <%= submit_tag "Submit Coupon" %>
<% end %>

<%= link_to "All Coupon Codes", coupons_path %>